# Don't cause the server to break if Passenger module not loaded
<IfModule passenger_module>
	<VirtualHost *:80>
	  ServerName 192.168.1.72
        ServerAlias assets0.168.1.72
        ServerAlias assets1.168.1.72
        ServerAlias assets2.168.1.72
        ServerAlias assets3.168.1.72

	  DocumentRoot "/opt/apps/cnn-carbon-calculator/current/public"
	  CustomLog /var/log/apache2/cnn-carbon-calculator-access.log combined
	  ErrorLog /var/log/apache2/cnn-carbon-calculator-error.log
	  
	  RailsEnv production
	  # RailsAllowModRewrite off
	  #
	  # Check for maintenance file and redirect all requests
	  RewriteEngine On
	  RewriteCond %{REQUEST_URI} !\.(css|jpg|png|gif)$
	  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
	  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
      RewriteRule ^.*$ /system/maintenance.html [L]
	  <Directory "/opt/apps/cnn-carbon-calculator/current/public">
	    Order allow,deny
	    Allow from all
	  </Directory>
	</VirtualHost>
</IfModule>

