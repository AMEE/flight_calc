check process memcached with pidfile /opt/apps/cnn-carbon-calculator/current/log/memcached.pid
	start program = "/usr/bin/memcached -d -m 64 -l 127.0.0.1 -p 11211 -P /opt/apps/cnn-carbon-calculator/current/log/memcached.pid -u deploy"
	stop program = "/usr/bin/killall memcached"
	if 3 restarts within 5 cycles then timeout

check process mysql with pidfile /var/run/mysqld/mysqld.pid
  group database
  start program = "/etc/init.d/mysql start"
  stop program = "/etc/init.d/mysql stop"
  if failed host 127.0.0.1 port 3306 then restart
  if 5 restarts within 5 cycles then timeout


check process sshd with pidfile /var/run/sshd.pid
  start program "/etc/init.d/ssh start"
  stop program "/etc/init.d/ssh stop"
  if failed port 22 protocol ssh then restart
  if 5 restarts within 5 cycles then timeout