!!! Strict
%html{html_attrs}
  
  %head
    %title Carbon Calculator
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "autocomplete", 'main'
    /[if IE]
      %style{:type => "text/css"}
        @import url(/stylesheets/ie.css);
      %script{:src => "/png-fix/iepngfix_tilebg.js", :type => "text/javascript"}
    = yield(:head)
  
  %body
    
    #page
      
      %h1 Carbon Calculator
      = yield
        
    %script{:src => "http://ajax.googleapis.com/ajax/libs/mootools/1.2.2/mootools-yui-compressed.js"}
    = javascript_include_tag "mootools-1.2.2.2-more", "clientcide.compressed", "formcheck", "application"
    
    